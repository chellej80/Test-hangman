import random

def welcome():
    
    #Define a name variable
    name = input("""
                ================================================================
                > Welcome to the Hangman Game! Please Enter your preferred game name:  <
                """).capitalize()
    
    #Use a decision making process to accept only alphabets as name
    if name.isalpha() == True:
